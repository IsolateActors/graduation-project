@model StoreUser
@{
    ViewData["Title"] = "编辑";
}

<h1 class="text-center">编辑信息</h1>

<hr />

<div class="row justify-content-center m-3">
    <div class="col-md-8 col-sm-10 col-lg-4">
        <form asp-action="StoreUserEdit" asp-route-id="@Model.ID" method="post">

            <label class="text-danger">@ViewData["Exist"]</label>

            <input type="hidden" asp-for="@Model.ID" />
            <input type="hidden" asp-for="@Model.RegisterTime" />

            <div class="form-group">
                <label asp-for="@Model.StoreName" class="control-label"></label>
                <input asp-for="@Model.StoreName" class="form-control" placeholder="请输入店铺名称" />
                <span asp-validation-for="StoreName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.Account" class="control-label"></label>
                <input asp-for="@Model.Account" class="form-control" placeholder="请输入账号" />
                <span asp-validation-for="@Model.Account" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.PassWord" class="control-label"></label>
                <input asp-for="@Model.PassWord" class="form-control" placeholder="请输入密码" />
                <span asp-validation-for="@Model.PassWord" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.StoreType.TypeName" class="control-label"></label>
                <select asp-for="@Model.StoreTypeID" asp-items="ViewBag.TypeList" class="form-control">
                    <option selected value="">请选择店铺类型</option>
                </select>
                <span asp-validation-for="@Model.StoreTypeID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input class="btn btn-outline-success" type="submit" value="保存" />
                <a class="btn btn-outline-primary" asp-action="StoreUsersIndex">返回</a>
            </div>
        </form>
    </div>
</div>
