@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<h1 class="text-center">欢迎登录在线订餐系统</h1>

<hr />


<div class="row justify-content-center m-3">
    <div class="col-md-10 col-sm-12 col-lg-6">
        <div class="card">
            <form asp-controller="Home" asp-action="Login">
                <div class="card-header text-center">
                    <h4>登录</h4>

                </div>

                <div class="card-body text-center">

                    <div class="row justify-content-center m-3">
                        <label class="control-label col-md-4">账户：</label>
                        <input asp-for="Account" class="form-control col-md-8" placeholder="请输入账号" />
                        @*<span asp-validation-for="" class="text-danger"></span>*@
                    </div>
                    <div class="row justify-content-center m-3">
                        <label class="control-label col-md-4">密码：</label>
                        <input asp-for="PassWord" type="password" class="form-control col-md-8" placeholder="请输入密码" />
                        @*<span asp-validation-for="Name" class="text-danger"></span>*@
                    </div>
                    <div class="form-check form-check-inline">
                        <input asp-for="Role" class="form-check-input" type="radio" id="oUser" value="onlineUser" checked>
                        <label class="form-check-label" for="oUser">用户登录</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input asp-for="Role" class="form-check-input" type="radio" id="sUser" value="storeUser">
                        <label class="form-check-label" for="sUser">商家登录</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input asp-for="Role" class="form-check-input" type="radio" id="admin" value="administration">
                        <label class="form-check-label" for="admin">管理登录</label>
                    </div>


                    <hr />
                    <div class="text-center">
                        <a asp-controller="Admin" asp-action="OnlineUserCreate">注册新用户</a>
                    </div>
                </div>
                <div class="card-footer text-center">
                    <input type="submit" class="btn btn-outline-primary" value="登录">
                </div>

            </form>
        </div>
        
    </div>
</div>