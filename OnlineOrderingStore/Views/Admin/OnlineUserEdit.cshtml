@model OnlineUser
@{
    ViewData["Title"] = "修改用户";
}

<h1 class="text-center">修改用户</h1>

<hr />

<div class="row justify-content-center m-3">
    <div class="col-md-8 col-sm-10 col-lg-4">
        <form asp-action="OnlineUserEdit" method="post">

            <label class="text-danger">@ViewData["Exist"]</label>

            <input type="hidden" asp-for="@Model.ID" />
            <input type="hidden" asp-for="@Model.RegisterTime" />

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" placeholder="请输入名称" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Account" class="control-label"></label>
                <input asp-for="Account" class="form-control" placeholder="请输入账号" />
                <span asp-validation-for="Account" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PassWord" class="control-label"></label>
                <input asp-for="PassWord" type="password" class="form-control" placeholder="请输入密码" />
                <span asp-validation-for="PassWord" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input class="btn btn-outline-success" type="submit" value="修改" />
                <a class="btn btn-outline-primary" asp-action="OnlineUsersIndex">返回</a>
            </div>
        </form>
    </div>
</div>