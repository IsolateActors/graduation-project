@model OrderListForStoreUserViewModel

@{
    ViewData["Title"] = "店铺订单";
}

<h1 class="text-center">订单</h1>

<hr />

<div class="container row form-inline">
    @*<form asp-controller="Store" asp-action="GoodsList" method="post">
            <p>
                <select class="form-control" asp-for="GoodsTypeName" asp-items="Model.StoreTypes">
                    <option value="">全部</option>
