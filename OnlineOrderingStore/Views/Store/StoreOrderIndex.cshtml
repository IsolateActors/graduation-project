                <input asp-for="SearchString" class="form-control" placeholder="请输入关键字" />
                <button type="submit" class="btn btn-outline-info">搜索</button>
            </p>
        </form>*@
</div>

<div class="card text-center" style="padding:10px;">
    <div class="card-header">
        <ul class="nav nav-tabs card-header-tabs">
            <li class="nav-item">
                <a class="nav-link active" href="#notDelivered" data-toggle="tab">未配送订单</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#Delivered" data-toggle="tab">已配送订单</a>
            </li>
        </ul>
    </div>
    <div class="tab-content">
        <div class="tab-pane active" id="notDelivered">
            <table class="table table-hover">
                <thead class="text-center">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.NotDeliveredOrder[0].Id)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.NotDeliveredOrder[0].CreateTime)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.NotDeliveredOrder[0].ConsigneeName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.NotDeliveredOrder[0].Phone)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.NotDeliveredOrder[0].Address)
                        </th>

                        <th>操作</th>
                    </tr>
                </thead>
                <tbody class="text-center">
                    
                    @foreach (var item in Model.NotDeliveredOrder)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CreateTime)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ConsigneeName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Phone)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Address)
                            </td>
                            <td>
                                <a asp-action="GoodsWithOrderDetails" asp-route-id="@item.Id" class="btn btn-outline-info">查看并配送</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="tab-pane" id="Delivered">
            <table class="table table-hover">
                <thead class="text-center">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.DeliveredOrder[0].Id)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DeliveredOrder[0].CreateTime)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DeliveredOrder[0].GoodsWithOrders[0].DeliveredTime)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DeliveredOrder[0].ConsigneeName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DeliveredOrder[0].Phone)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DeliveredOrder[0].Address)
                        </th>
                        <th>操作</th>
                    </tr>
                </thead>
                <tbody class="text-center">
                    @foreach (var item in Model.DeliveredOrder)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreateTime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.GoodsWithOrders[0].DeliveredTime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ConsigneeName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Phone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address)
                        </td>
                        <td>
                            <a asp-action="GoodsWithOrderDetails" asp-route-id="@item.Id" class="btn btn-outline-info">查看</a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>






